FROM ibn/ubuntu20.04:dev

ENV DEBIAN_FRONTEND=noninteractive

RUN apt-get update &&  \
    apt-get install -y \
        net-tools

COPY ["start.sh", "ibn/bin"]

RUN mv /home/ibn/build/bin/* ibn/bin/

RUN apt-get clean -y      && \
    apt-get autoclean -y  && \
    apt-get autoremove -y && \
    rm -rf /home/*



